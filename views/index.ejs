        let p = document.getElementsByClassName('isi-berita');
        let maxLength = 300;

        for (let i = 0; i < p.length; i++) {
            let text = p[i].innerText;
            let textLen = text.length;

            if (textLen > maxLength) {
                var res = text.substr(0, maxLength) + '...';
